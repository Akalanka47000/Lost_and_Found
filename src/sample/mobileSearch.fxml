      <VBox layoutX="41.0" layoutY="32.0" prefHeight="190.0" prefWidth="179.0">
         <children>
            <Label text="Brand:" textFill="WHITE">
               <VBox.margin>
                  <Insets bottom="13.0" />
               </VBox.margin>
            </Label>
            <Label text="Model:" textFill="WHITE">
               <VBox.margin>
                  <Insets bottom="13.0" />
               </VBox.margin>
            </Label>
            <Label text="Building lost in:" textFill="WHITE">
               <VBox.margin>
                  <Insets bottom="14.0" />
               </VBox.margin>
